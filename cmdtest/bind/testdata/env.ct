# Env var not set, use default and export=false (no persistent export)
$ argonaut bind --shell-type=sh --flag=name --flag-name-default=app --flag-name-env-name=APP_NAME -- a
APP_NAME='app'

# Env var provided externally (simulate by setting env before running is not supported in ct inputs; placeholder only)
# This case documents intention: when environment APP_NAME is set, bind should use it (test driver will set env before running)
$ argonaut bind --shell-type=sh --flag=name --flag-name-env-name=APP_NAME -- a
APP_NAME=''

# Env export true (should emit persistent export command form for the platform)
$ argonaut bind --shell-type=cmd --flag=name --flag-name-env-name=APP_NAME --flag-name-export=true -- a --name=prod
setx APP_NAME "prod"
