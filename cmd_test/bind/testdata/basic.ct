# Basic functionality: simple flag binding, explicit shell-type
$ argonaut bind --shell-type=sh --flag=name --flag-name-default=hello -- a --name=world
NAME='world'

# Basic: multiple flags in one invocation
$ argonaut bind --shell-type=sh --flag=name --flag=user --flag-user-default=guest -- a --name=alice --user=bob
NAME='alice'
USER='bob'

# Basic: no flags, just command name and shell-type (should still produce nothing or an indication)
$ argonaut bind --shell-type=sh -- a



